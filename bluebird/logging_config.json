{
  "version": 1,
  "disable_existing_loggers": true,
  "formatters": {
    "standard": {
      "format": "%(asctime)s %(levelname)s: %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "episode": {
      "format": "%(asctime)s %(PREFIX)s %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "level": "INFO",
      "class": "logging.StreamHandler",
      "formatter": "standard"
    },
    "debug-file": {
      "level": "DEBUG",
      "class": "logging.FileHandler",
      "formatter": "standard"
    },
    "episode-file": {
      "level": "DEBUG",
      "class": "logging.FileHandler",
      "formatter": "episode"
    }
  },
  "loggers": {
    "bluebird": {
      "handlers": [
        "console",
        "debug-file"
      ],
      "propagate": true,
      "level": "DEBUG"
    },
    "episode": {
      "handlers": [
        "episode-file"
      ],
      "propagate": true,
      "level": "DEBUG"
    }
  }
}
